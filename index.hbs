{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- The big featured header, it uses blog cover image as a BG if available --}}
<header class="site-header outer {{#if @blog.cover_image}}" style="background-image: url({{@blog.cover_image}}){{else}}no-cover{{/if}}">
    <div class="inner">
        <div class="site-header-content">
            <h1 class="site-title">
                {{#if @blog.logo}}
                    <img class="site-logo" src="{{@blog.logo}}" alt="{{@blog.title}}" />
                {{else}}
                    {{@blog.title}}
                {{/if}}
            </h1>
            <h2 class="site-description">{{@blog.description}}</h2>
        </div>
        {{> "site-nav"}}
    </div>
</header>

{{!-- The main content area --}}
<main id="site-main" class="site-main outer" role="main">
    <div class="inner">

        <div class="post-feed">
        {{#get "posts" filter="featured:true" limit="all" as |featured|}}

            {{#foreach featured}}
                <article class="post-full {{post_class}} {{#unless feature_image}}no-image{{/unless}}">
        <br>
                    <header class="post-full-header">
                        <section class="post-full-meta">
                            {{#primary_tag}}
                                <span class="date-divider">/</span> <a href="{{url}}">{{name}}</a>
                            {{/primary_tag}}
                        </section>
                        <h1 class="post-full-title">{{title}}</h1>
                                            Updated: <time class="post-full-meta-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMMM YYYY"}}</time>

                    </header>

                    <section class="post-full-content">
                        {{content}}
                    </section>

            {{/foreach}}
        {{/get}}
        {{#get "posts" filter="tags:main" limit="all" as |main|}}

            {{#foreach main}}
                <article class="post-full {{post_class}} {{#unless feature_image}}no-image{{/unless}}">
        <br>
                    <header class="post-full-header">
                        <section class="post-full-meta">
                            {{#primary_tag}}
                                <span class="date-divider">/</span> <a href="{{url}}">{{name}}</a>
                            {{/primary_tag}}
                        </section>
                        <h1 class="post-full-title">{{title}}</h1>
                                            Updated: <time class="post-full-meta-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMMM YYYY"}}</time>

                    </header>

                    <section class="post-full-content">
                        {{content}}
                    </section>

            {{/foreach}}


        {{/get}}
        </div>
        
         <div class="contact-form">       
        <h6>To add more resources to this list, please submit them here: <a href="https://goo.gl/forms/M8bRTv1QFkBB4K343">https://goo.gl/forms/M8bRTv1QFkBB4K343</a></h6>
        <iframe
        src="https://docs.google.com/forms/d/e/1FAIpQLScRnIZXPKUy05toCtzjoVGI-Y_8IG6SOa2sGu8poaugHMWOKA/viewform?embedded=true"
        width="100%" height="1500" frameborder="0" marginwidth="0"
        marginheight="0">Loading...</iframe>
        </div>
    </div>
</main>

